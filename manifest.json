{
  "manifest_version": 3,
  "name": "Maria AI - Ultimate Assistant",
  "version": "2.0.7",
  "description": "Asistente inteligente con control de navegador, visi√≥n y memoria persistente.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "background"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Abrir Maria AI"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "assets/marked.min.js",
        "assets/dompurify.min.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "styles.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  }
}